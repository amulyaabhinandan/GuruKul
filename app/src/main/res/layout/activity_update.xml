<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/app_background_gradient"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity"
    android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/outline"
            android:padding="10dp"
            android:layout_gravity="center|top">

            <LinearLayout
                android:id="@+id/update_profile_image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/update_profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="145dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/man" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD PROFILE PIC"
                    android:textColor="@color/borders_color"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <EditText
                android:id="@+id/update_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2.5dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginEnd="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:background="@drawable/box_outline"
                android:drawableStart="@drawable/name"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="NAME"
                android:textColorHint="@color/borders_color"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/borders_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/update_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:drawableStart="@drawable/classroom"
                android:drawablePadding="10dp"
                android:textColor="@color/borders_color"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/box_outline"
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp"/>

            <EditText
                android:id="@+id/update_roll_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:drawableStart="@drawable/man"
                android:drawablePadding="10dp"
                android:textColor="@color/borders_color"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/box_outline"
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp" />

            <EditText
                android:id="@+id/update_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="10"
                android:hint="PHONE NUMBER"
                android:textColorHint="@color/borders_color"
                android:drawableStart="@drawable/phone_icon"
                android:drawablePadding="10dp"
                android:textColor="@color/borders_color"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/box_outline"
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp"/>

            <EditText
                android:id="@+id/update_password"
                android:hint="PASSWORD"
                android:textColorHint="@color/borders_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:drawableStart="@drawable/password_icon"
                android:drawablePadding="10dp"
                android:textColor="@color/borders_color"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/box_outline"
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp" />

            <EditText
                android:id="@+id/update_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:drawableStart="@drawable/password_icon"
                android:drawablePadding="10dp"
                android:textColor="@color/borders_color"
                android:hint="CONFIRM PASSWORD"
                android:textColorHint="@color/borders_color"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/box_outline"
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp" />

            <Button
                android:id="@+id/update_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/my_custom_buttton_style"
                android:text="UPDATE"
                android:textColor="@color/gradient_starting"
                android:textSize="25dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
</ScrollView>